<div class="bg-grey-lighter h-screen">
  <div class="container mx-auto h-full flex justify-center items-center">
      <div class="w-1/3">
        <h1 class="text-center text-4xl font-normal -mt-20 mb-20">Sign in to your account</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "bg-white shadow rounded px-8 pt-6 pb-8 mb-4"}) do |f| %>
          <%= render "users/shared/alerts" %>
          <div class="mb-6">
            <label class="block text-grey-darker text-sm font-bold mb-2" for="email">
              <%= f.label :email %>
            </label>
            <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", placeholder: "email@example.com", class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker leading-tight" %>
          </div>

          <div class="mb-2">
            <label class="block text-grey-darker text-sm font-bold mb-2" for="password">
              <%= f.label :password %>
            </label>
            <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "******************", class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker mb-3 leading-tight"  %>
          </div>

          <div class="mb-6">
            <label class="block text-grey font-bold">
              <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
              <span class="text-sm">
                <%= f.label :remember_me %>
              </span>
            </label>
          </div>

          <%= f.submit "Sign in", class: "mb-6 bg-purple-dark hover:bg-purple text-white font-semibold py-2 px-4 border border-purple-light rounded shadow w-full cursor-pointer" %>

          <div class="text-center text-sm">
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-grey-darkest hover:text-black hover:underline no-underline" %>
          </div>
        <% end %>

        <div class="text-center text-sm">
          <p class: "text-grey-darkest no-underline">Need an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "no-underline hover:underline" %></p>
        </div>
      </div>
   </div>
</div>
