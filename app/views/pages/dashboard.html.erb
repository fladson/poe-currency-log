<div class="flex min-h-screen">
  <aside class="min-h-screen w-62 flex-no-shrink bg-white text-custom-grey font-semibold border-r border-grey-border fixed pin-l">
    <div class="flex p-8">
      <%= inline_svg "logo.svg", class: "h-12 w-12 self-center flex-1" %>
    </div>

    <div class="">
      <div class="mb-8">
        <div class="inline-flex px-4">
          <%= inline_svg "icons/home.svg", class: "stroke-current w-5 h-5" %>
          <p class="ml-2">Standard Leagues</p>
        </div>

        <ul class="mt-2 list-reset">
          <% current_user.standard_leagues.each do |league| %>
            <li><%= link_to league, dashboard_path(league.parameterize, query: league), method: :get, class: "tracking-wide uppercase text-xs no-underline hover:underline hover:text-grey-darkest text-grey-dark ml-12" %></li>
          <% end %>
        </ul>

      </div>

      <div class="">
        <div class="inline-flex px-4">
          <%= inline_svg "icons/calendar.svg", class: "stroke-current w-5 h-5" %>
          <p class="ml-2">Temp Leagues</p>
        </div>

        <ul class="mt-2 list-reset">
          <% current_user.temp_leagues.each do |league| %>
            <li><%= link_to league, dashboard_path(league.parameterize, query: league), method: :get, class: "tracking-wide uppercase text-xs no-underline hover:underline hover:text-grey-darkest text-grey-dark ml-12" %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="fixed pin-b p-4 ml-3">
      <hr class="border-t border-grey-border mb-2">

      <nav class="text-sm tracking-wide">
        <a href="#" class="text-custom-grey hover:underline hover:text-grey-darkest no-underline mr-4">Settings</a>
        <a href="#" class="text-custom-grey hover:underline hover:text-grey-darkest no-underline mr-4">Help</a>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "text-custom-grey hover:underline hover:text-grey-darkest no-underline" %>
      </nav>
    </div>
  </aside>

  <main class="w-full bg-grey-bg py-6 px-8 flex-shrink ml-62">
    <div class="flex justify-between">
      <h2 class="mb-4">
        <%= @current_league %>
      </h2>
      <p class="mr-2 mt-6 uppercase text-sm">Next sync in <strong>5:00:00</strong></p>
    </div>
    <hr class="border-t border-grey-border">
    <%= render "poe/currency" %>
  </main>
</div>
