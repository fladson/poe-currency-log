<div class="flex min-h-screen">
  <aside class="min-h-screen w-60 flex-no-shrink bg-white text-grey-text font-semibold border-r border-grey-border fixed pin-l">
    <div class="p-8">
      <a href="/" class="flex">
        <%= inline_svg "logo.svg", class: "h-20 w-20 self-center flex-1" %>
      </a>
    </div>

    <div>
      <div class="mb-6">
        <div class="inline-flex px-4">
          <%= inline_svg "icons/home.svg", class: "stroke-current w-5 h-5 text-grey-text" %>
          <p class="ml-2">Standard Leagues</p>
        </div>

        <ul class="list-reset">
          <% current_user.permanent_leagues.each do |league| %>
            <li><%= link_to league['name'], dashboard_path(league['name'].parameterize), method: :get, class: "#{active_class?(league['name'])} no-underline tracking-wide uppercase text-xs hover:text-grey-text text-grey-text-custom ml-12" %></li>
          <% end %>
        </ul>
      </div>

      <% if current_user.finished_temporary_leagues.present? %>
        <div class="mb-6">
          <div class="inline-flex px-4">
            <%= inline_svg "icons/archive.svg", class: "stroke-current w-5 h-5" %>
            <p class="ml-2">Past Temp Leagues</p>
          </div>

          <ul class="list-reset">
            <% current_user.finished_temporary_leagues.each do |league| %>
              <li><%= link_to league['name'], dashboard_path(league['name'].parameterize), method: :get, class: "#{active_class?(league['name'])} no-underline tracking-wide uppercase text-xs hover:text-grey-text text-grey-text-custom ml-12" %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6">
        <div class="inline-flex px-4">
          <%= inline_svg "icons/calendar.svg", class: "stroke-current w-5 h-5" %>
          <p class="ml-2">Temp Leagues</p>
        </div>

        <ul class="list-reset">
          <% current_user.not_finished_temporary_leagues.each do |league| %>
            <li><%= link_to league['name'], dashboard_path(league['name'].parameterize), method: :get, class: "#{active_class?(league['name'])} no-underline tracking-wide uppercase text-xs hover:text-grey-text text-grey-text-custom ml-12" %></li>
          <% end %>
        </ul>
      </div>

      <% if current_user.not_finished_custom_leagues.present? %>
        <div class="mb-6">
          <div class="inline-flex px-4">
            <%= inline_svg "icons/archive.svg", class: "stroke-current w-5 h-5" %>
            <p class="ml-2">Custom Leagues</p>
          </div>

          <ul class="list-reset">
            <% current_user.not_finished_custom_leagues.each do |league| %>
              <li><%= link_to league['name'], dashboard_path(league['name'].parameterize), method: :get, class: "#{active_class?(league['name'])} no-underline tracking-wide uppercase text-xs hover:text-grey-text text-grey-text-custom ml-12" %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <% if current_user.finished_custom_leagues.present? %>
        <div class="mb-6">
          <div class="inline-flex px-4">
            <%= inline_svg "icons/archive.svg", class: "stroke-current w-5 h-5" %>
            <p class="ml-2">Past Custom Leagues</p>
          </div>

          <ul class="list-reset">
            <% current_user.finished_custom_leagues.each do |league| %>
              <li><%= link_to league['name'], dashboard_path(league['name'].parameterize), method: :get, class: "#{active_class?(league['name'])} no-underline tracking-wide uppercase text-xs hover:text-grey-text text-grey-text-custom ml-12" %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="fixed pin-b mb-2 w-60">
      <hr class="border-t border-grey-border mb-2">
      <nav class="text-sm tracking-wide text-center flex justify-between px-3">
        <%= link_to "Settings", edit_user_registration_path, method: :get, class: "text-grey-text-light hover:text-grey-text no-underline" %>
        <a href="mailto:poe.currency.log@gmail.com?Subject=Help - " class="text-grey-text-light hover:text-grey-text no-underline">Contact</a>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "text-grey-text-light hover:text-grey-text no-underline" %>
      </nav>
    </div>
  </aside>
