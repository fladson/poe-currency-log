<div class="flex min-h-screen">
  <aside class="min-h-screen w-60 flex-no-shrink bg-white text-grey-text font-semibold border-r border-grey-border fixed pin-l">
    <div class="flex p-8">
      <%= inline_svg "logo.svg", class: "h-20 w-20 self-center flex-1" %>
    </div>

    <div>
      <div class="mb-8">
        <div class="inline-flex px-4">
          <%= inline_svg "icons/home.svg", class: "stroke-current w-5 h-5 text-grey-text" %>
          <p class="ml-2">Standard Leagues</p>
        </div>

        <ul class="mt-2 list-reset">
          <% current_user.standard_leagues.each do |league| %>
            <li><%= link_to league, dashboard_path(league.parameterize), method: :get, class: "tracking-wide uppercase text-xs no-underline hover:text-grey-text text-grey-text-custom ml-12" %></li>
          <% end %>
        </ul>
      </div>

      <div class="mb-8">
        <div class="inline-flex px-4">
          <%= inline_svg "icons/calendar.svg", class: "stroke-current w-5 h-5" %>
          <p class="ml-2">Temp Leagues</p>
        </div>

        <ul class="mt-2 list-reset">
          <% current_user.temp_leagues.each do |league| %>
            <li><%= link_to league, dashboard_path(league.parameterize), method: :get, class: "tracking-wide uppercase text-xs no-underline hover:text-grey-text text-grey-text-custom ml-12" %></li>
          <% end %>
        </ul>
      </div>

      <div>
        <div class="inline-flex px-4">
          <%= inline_svg "icons/activity.svg", class: "stroke-current w-5 h-5" %>
          <%= link_to "Leagues Comparison", leagues_comparison_path, method: :get, class: "ml-2 text-grey-text no-underline hover:underline" %>
        </div>
      </div>
    </div>

    <div class="fixed pin-b p-4 ml-3">
      <hr class="border-t border-grey-border mb-2">

      <nav class="text-sm tracking-wide">
        <%= link_to "Settings", user_settings_path, method: :get, class: "text-grey-text-light hover:text-grey-text no-underline mr-2" %>
        <a href="mailto:poe.currency.log@gmail.com?Subject=Help - " class="text-grey-text-light hover:text-grey-text no-underline mr-2">Help</a>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "text-grey-text-light hover:text-grey-text no-underline" %>
      </nav>
    </div>
  </aside>
